---
import { Icon } from "astro-icon/components";
---

<script>
  function toggleMenu() {
    console.log("teste");
    const sidebar = document.getElementById("sidebar");
    sidebar?.classList.toggle("translate-x-full");
  }

  // Garante que os botões tenham os eventos corretamente atribuídos
  document.addEventListener("DOMContentLoaded", () => {
    document.getElementById("menuButton")?.addEventListener("click", toggleMenu);
    document.getElementById("closeButton")?.addEventListener("click", toggleMenu);
  });
</script>

<!-- Ícone do Menu -->
<div class="lg:hidden absolute top-5 right-5">
  <button id="menuButton">
    <Icon name="mdi:menu" class="w-8 h-8" />
  </button>
</div>

<!-- Sidebar -->
